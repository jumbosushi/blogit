<div id="sidebar">
  <nav>
    <h2>Archive</h2>
    <ul>
      <% @posts_by_month.each do |month, posts| %>
        <li><%= link_to month.strftime('%B %Y'), blog_posts_archives_path(month.year, month.month) %></li>
      <% end %>
    </ul>

    <% if @tags.present? %>
      <h2>Category</h2>
      <ul>
        <% @tags.each do |tag| %>
          <li><%= link_to tag.name, tagged_blog_posts_path(tag.name) %></li>
        <% end %>
      </ul>
    <% end %>
  </nav>

  <%= render 'mailing_list_signup' if Blogit.configuration.include_mailing_list_signup %>

</div>
